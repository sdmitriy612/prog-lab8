<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.sdmitriy612.gui.controllers.AuthWindowController"
      spacing="15"
      alignment="CENTER"
      style="-fx-background-color: #f4f4f4;">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label text="Вход в систему"
           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TextField fx:id="usernameField"
               promptText="Имя пользователя"
               maxWidth="250" />

    <PasswordField fx:id="passwordField"
                   promptText="Пароль"
                   maxWidth="250" />

    <HBox spacing="10" alignment="CENTER">
        <Button text="Войти" onAction="#onCommand" userData="signin"/>
        <Button text="Регистрация" onAction="#onCommand" userData="signup"/>
    </HBox>

    <Label fx:id="messageLabel"
           textFill="red"
           style="-fx-font-size: 12px;"
           text="" />
</VBox>
